@model List<Blog_Challenge.Models.BlogPost>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />

    <title>Home page post</title>
</head>
<body>
    <header>
        <div class="container">
            <h2>Home</h2>
        </div>
    </header>

    <div class=" container">
        @using (Html.BeginForm("Home", "BlogPost", FormMethod.Get))
        {
            <input type="text" name="serchTittle" />
            <input type="submit" value="Serch Post" />
        }
    </div>

    @if (Model != null)
    {

        if (Model.Count == 0)
        {
            <h2 class="alert">No posts with that title were found</h2>
        }
        else
        {
            <table class="table">

                <tr>
                    <th>
                        @Html.Label("Tittle")
                    </th>
                    <th>
                        @Html.Label("Categoty")
                    </th>
                    <th>
                        @Html.Label("Data Time")
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Tittle)
                        </td>

                        <td>
                            @Html.DisplayFor(model => item.Id_category)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Publication_Date)
                        </td>
                    </tr>
                }
            </table>
        }
    }

</body>
</html>
